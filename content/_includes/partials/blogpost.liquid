<div class="blog-post">
    <img src="https://source.unsplash.com/600x600?summer" alt="" class="blog-graphic" />
    <div class="blog-content">
        <a href="{{ post.url }}">{{ post.data.title }}</a><br />
        {{ post.date | date: "%d %B %Y" }}<br />
        {{ post.data.author }} <br />
        {{ post.templateContent | truncate: 200 }}<br />
        {%- for tag in post.data.categories -%}
            {% tag tag %}
        {% endfor %}
    </div>
</div>

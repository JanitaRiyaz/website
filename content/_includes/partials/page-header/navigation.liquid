<nav class="page-navigation page-navigation--header inner-wrapper">
    <h2 class="visually-hidden">Main navigation</h2>
    <ul>
        {% assign navigation = collections.pages | page-header-navigation | eleventyNavigation | eleventyNavigationToHtml | safe %}
        {% for page in navigation %}
            {% if page.data.page-header-navigation and page.data.locale == locale %}
            <li{% if page.url == page.url %} class="my-active-class"{% endif %}>
                <a href="{{ page.url | url }}">{{ page.data.title }}</a>
                
                <!-- 
                    TODO: fix this
                <button>Open submenu</button>
                <ul>
                    {% for child in page.children %}
                        <li><a href="{{ child.url | url }}">{{ child.title }}</a></li>
                    {% endfor %}
                </ul> -->
            </li>
            {% endif %}
        {% endfor %}
    </ul>
</nav>



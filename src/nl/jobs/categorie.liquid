---
## This file is used to generate a category page
permalink: "{{locale}}/jobs/categorie/{{ category.slug }}/index.html"
eleventyExcludeFromCollections: true 

pagination:
  data: collections.jobCategories
  size: 1
  alias: category

key: jobs-{{ category.slug }}

tags: pages
---
  <h2>{{ site[locale].job_category }}: {{ category.title }}</h2>
  {% assign posts = collections.published_jobs | getLocale: locale %}
  <ul class="desktop-rows">
  {% for post in posts %}
    {% assign post_categories = post.data.categories %}
    {% for post_category in post_categories %}
        {% assign current_category == post_category | downcase %} 
        {% if category.title == current_category %} 
          <li class="list-item">
            {% include partials/job headerlvl:"h3" index:forloop.index job:post %}
          </li>
        {% endif %}
    {% endfor %}
  {% endfor %}
</ul>

{% if category.totalPages > 1 %}
  <ul>
    {% if category.pageSlugs.previous %}<li><a href="/{{ locale }}/{{ page.fileSlug }}/{{ category.pageSlugs.previous }}/">{{ site[locale].previous }}</a></li>{% endif %}
    {% if category.pageSlugs.next %}<li><a href="/{{ locale }}/{{ page.fileSlug }}/{{ category.pageSlugs.next }}/">{{ site[locale].next }}</a></li>{% endif %}
  </ul>
{% endif %}

<h3>Categories</h3>
{% for category in collections.jobCategories %}
  {% if loop.first %}
    <p><a href="/{{locale}}/jobs/">{{ site[locale].all }}</a></p>
  {% endif %}
  <p><a href="/{{locale}}/jobs/categorie/{{ category.slug }}">{{ category.title }}</a></p>
{% endfor %}

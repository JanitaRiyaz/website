---
## This file is used to generate a category page
permalink: "{{locale}}/activities/categorie/{{ category.slug }}/index.html"
tags: pages

pagination:
  data: collections.activityCategories
  size: 1
  alias: category

key: activities-{{ category.slug }}
---
<h2>Activity category: {{ category.title }}</h2>

<h3>Categories</h3>
{% for category in collections.activityCategories %}
  {% if loop.first %}
    <p><a href="/{{locale}}/activities/">{{ site[locale].all }}</a></p>
  {% endif %}
  <p><a href="/{{locale}}/activities/categorie/{{ category.slug }}">{{ category.title }}</a></p>
{% endfor %}

{% assign posts = collections.published_activities | getLocale: locale %}
<ul class="desktop-columns">
  {% for post in posts %}
    {% assign post_categories = post.data.categories %}
    {% for post_category in post_categories %}
        {% assign current_category == post_category | downcase %} 
        {% if category.title == current_category %} 
          <li class="list-item"> 
            {% include partials/activity headerlvl:"h3" index:forloop.index activity:post %} 
          </li>
        {% endif %}
    {% endfor %}
  {% endfor %}
</ul>

  {% if category.totalPages > 1 %}
    <ul>
      {% if category.pageSlugs.previous %}<li><a href="{{ locale }}/activities/categorie/{{ category.pageSlugs.previous }}/">{{ site[locale].previous }}</a></li>{% endif %}
      {% if category.pageSlugs.next %}<li><a href="/activities/categorie/{{ category.pageSlugs.next }}/">{{ site[locale].next }}</a></li>{% endif %}
    </ul>
  {% endif %}

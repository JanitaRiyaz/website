{% include partials/utility/dynamic-headerlevel level:"h3" title:site[locale].categories %}

{% for category in collections.blogCategories %}
  {% if loop.first %}
    <p><a href="{{ site[locale].blogURL }}/">{{ site[locale].all }}</a></p>
  {% endif %}
  <p><a href="{{ site[locale].blogURL }}/categorie-{{ category.slug }}">{{ category.title }}</a></p>
{% endfor %}
